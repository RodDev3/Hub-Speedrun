{% extends 'base.html.twig' %}

{% block title %}Submit Run - {{ game.name }} - Hub Speedrun{% endblock %}

{% block body %}

    {{ include('games/includes/cardGame.html.twig') }}

    <div class="container">

        {{ form_start(form, {'attr' : {'id' : 'formRuns', 'data-controller' : 'loadFields runsValidation', 'data-action' : 'submit->runsValidation#submitRun'} }) }}

        <div class="row mt-3">
            <div class="col-12 col-md-6">
                {{ form_label(form.refCategories) }}
                {{ form_widget(form.refCategories) }}
            </div>
        </div>
        {{ form_widget(form.game) }}

        <div id="loadFields" class="mt-3"></div>

        <div class="row mt-3">
            <div class="col-12 col-md-6">

                {{ form_label(form.dateMade) }}
                {{ form_widget(form.dateMade) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
        </div>

        <div class="mt-3">
            <div class="col-12 col-md-6">
                {{ form_label(form.video) }}
                {{ form_widget(form.video) }}
            </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <a class="btn btn-primary" href="{{ path('app_games_show', {rewrite : game.rewrite}) }}">Back to game</a>
            <button class="btn btn-validation">{{ button_label|default('Save') }}</button>
        </div>
        {{ form_end(form, {render_rest: false}) }}
    </div>

{% endblock %}
