{% extends 'base.html.twig' %}

{% block title %}Hub Speedrun - Login{% endblock %}

{% block body %}
    <div class="container mt-4">

        <form method="post">

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="mb-3 font-weight-normal">Please sign in</h1>
            <div class="row">

                <div class="col-12 col-md-6">
                    <label for="username">Username</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"
                           autocomplete="username" required autofocus>
                </div>
                <div class="col-12 col-md-6">
                    <label for="password">Password</label>
                    <input type="password" name="_password" id="password" class="form-control"
                           autocomplete="current-password"
                           required>
                </div>
            </div>

            <div class="row {% if error %} mt-4 {% endif %}">
                <div class="col-12 col-md-6">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-primary mt-4" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}
