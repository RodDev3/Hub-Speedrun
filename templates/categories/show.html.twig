{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Rules</th>
                <td>{{ category.rules }}</td>
            </tr>
            <tr>
                <th>Players</th>
                <td>{{ category.players }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categories_index', {'rewrite': game.rewrite} ) }}">back to list</a>

    <a href="{{ path('app_categories_edit', {'id': category.id, 'rewrite': game.rewrite }) }}">edit</a>

    <a href="{{ path('app_fields_index', {'idCategories': category.id}) }}">Manage Fields</a>

    {{ include('categories/_delete_form.html.twig') }}
{% endblock %}
