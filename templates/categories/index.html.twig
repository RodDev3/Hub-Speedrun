{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>{{ game.name }}'s Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rules</th>
                <th>Players</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.rules }}</td>
                <td>{{ category.players }}</td>
                <td>
                    <a href="{{ path('app_categories_show', {'id': category.id, 'rewrite' : game.rewrite}) }}">show</a>
                    <a href="{{ path('app_categories_edit', {'id': category.id, 'rewrite' : game.rewrite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categories_new', {'rewrite' : game.rewrite}) }}">Create new</a>
{% endblock %}
